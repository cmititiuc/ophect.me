<%= render :partial => 'header', :locals => { :css_class => 'grid header' } %>
<%#= render :partial => 'header', :locals => { :css_class => 'grid header-ghost' } %>

<div class="grid grid-pad">
  <div class="col-8-12">
    <h1 style="text-align: center; margin-bottom: 2em">Sample Work</h1>
    <%
      content = RedCloth.new(property('WelcomeContent'))
      content.filter_html = true
    %>
    <%= content.to_html.html_safe %>
  </div>

  <div class="col-4-12">
    <h1 style="text-align: center; margin-bottom: 2em">Writings</h1>
    <% current_user.posts.order('created_at DESC').each do |post| %>
      <p><%= link_to post.title, post %></p>
    <% end %>
  </div>
</div>

<div class="grid footer">
  <div class="col-2-12"><h3><%= link_to 'About', welcome_about_path %></h3></div>
  <div class="col-2-12"><h3><%= link_to 'Sign In', new_user_session_path %></h3></div>
</div>
