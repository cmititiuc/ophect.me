<style>
  td { border: 0px dotted teal; padding: .5em; }
  table { margin-left: auto; margin-right: auto; }
</style>

<h1>Meal plan</h1>

<table>
  <tr><td><h2>8</h2></td><th>Breakfasts</td><td></td></tr>
  <% @meals.where(period: 'breakfast').each do |meal| %>
